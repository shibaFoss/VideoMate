<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10"
        android:layout_marginTop="@dimen/_5"
        android:layout_marginEnd="@dimen/_10"
        android:layout_marginBottom="@dimen/_5"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_15"
        app:cardElevation="@dimen/_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- ================= TAB: HOME ================= -->
            <LinearLayout
                android:id="@+id/btn_home_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/rd_primary"
                android:clickable="true"
                android:elevation="@dimen/_2"
                android:orientation="vertical">

                <!-- Home icon -->
                <ImageView
                    android:id="@+id/img_home_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_nav_home"
                    android:tint="@color/color_on_primary"
                    tools:ignore="ImageContrastCheck" />

                <!-- Home label -->
                <TextView
                    android:id="@+id/txt_home_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_home"
                    android:textColor="@color/color_on_primary"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <!-- ================= TAB: MUSIC ================= -->
            <LinearLayout
                android:id="@+id/btn_music_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:elevation="@dimen/_0"
                android:orientation="vertical">

                <!-- Music icon -->
                <ImageView
                    android:id="@+id/img_music_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_nav_music"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <!-- Music label -->
                <TextView
                    android:id="@+id/txt_music_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_music"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <!-- ================= TAB: VIDEOS ================= -->
            <LinearLayout
                android:id="@+id/btn_videos_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:elevation="@dimen/_0"
                android:orientation="vertical">

                <!-- Videos icon -->
                <ImageView
                    android:id="@+id/img_videos_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_nav_videos"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <!-- Videos label -->
                <TextView
                    android:id="@+id/txt_videos_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_videos"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <!-- ================= TAB: DOWNLOADS ================= -->
            <LinearLayout
                android:id="@+id/btn_downloads_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:elevation="@dimen/_0"
                android:orientation="vertical">

                <!-- Downloads icon -->
                <ImageView
                    android:id="@+id/img_downloads_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_nav_downloads"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <!-- Downloads label -->
                <TextView
                    android:id="@+id/txt_downloads_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_tasks"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <!-- ================= TAB: SETTINGS ================= -->
            <LinearLayout
                android:id="@+id/btn_settings_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:elevation="@dimen/_0"
                android:orientation="vertical">

                <!-- Settings icon -->
                <ImageView
                    android:id="@+id/img_settings_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <!-- Settings label -->
                <TextView
                    android:id="@+id/txt_settings_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/title_settings"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
