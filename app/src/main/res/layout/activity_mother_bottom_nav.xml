<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:ignore="UseCompatTextViewDrawableXml,UseAppTint">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10"
        android:layout_marginTop="@dimen/_5"
        android:layout_marginEnd="@dimen/_10"
        android:layout_marginBottom="@dimen/_5"
        app:cardBackgroundColor="@color/color_background"
        app:cardCornerRadius="@dimen/_10"
        app:cardElevation="@dimen/_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_records_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/rd_transparent"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_records_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_records"
                    android:tint="@color/color_text_primary"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/txt_records_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/records"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_analytics_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_analytics_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_analytics"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/txt_analytics_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/analytics"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_budgets_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_budgets_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_budget"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/txt_budgets_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/budget"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_accounts_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_accounts_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_wallet"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/txt_accounts_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/accounts"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_categories_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5"
                android:layout_marginEnd="@dimen/_5"
                android:layout_marginBottom="@dimen/_5"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_trans_dark"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_categories_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5"
                    android:adjustViewBounds="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_category"
                    android:tint="@color/color_text_hint"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/txt_categories_tab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/sans_font_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/category"
                    android:textColor="@color/color_text_hint"
                    android:textSize="@dimen/small_text_size"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
