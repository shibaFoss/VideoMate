<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_5"
    android:layout_marginTop="@dimen/_3"
    android:layout_marginEnd="@dimen/_5"
    android:layout_marginBottom="@dimen/_3"
    android:background="@drawable/btn_selector_solid_surface"
    android:elevation="@dimen/_1"
    android:padding="@dimen/_5">

    <ImageView
        android:id="@+id/img_categories_thumb"
        android:layout_width="@dimen/_30"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:padding="@dimen/_2"
        android:scaleType="fitXY"
        android:src="@drawable/ic_decrease" />

    <LinearLayout
        android:id="@+id/transactions_info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/img_categories_thumb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_transaction_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8"
            android:layout_marginBottom="@dimen/_2"
            android:drawableEnd="@drawable/ic_arrow_forward"
            android:drawableTint="@color/color_text_secondary"
            android:ellipsize="end"
            android:fontFamily="@font/sans_font_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/_320"
            android:textColor="@color/color_error"
            android:textSize="@dimen/normal_text_size"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_transaction_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5"
                android:layout_toStartOf="@+id/txt_transaction_time"
                android:drawableTint="@color/color_text_secondary"
                android:ellipsize="end"
                android:fontFamily="@font/sans_font_medium"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="@dimen/_5"
                android:paddingTop="@dimen/_2"
                android:paddingEnd="@dimen/_5"
                android:paddingBottom="@dimen/_2"
                android:text="@string/title_demo_transaction_note"
                android:textColor="@color/color_error"
                android:textSize="@dimen/message_text_size"
                tools:ignore="UseCompatTextViewDrawableXml,TextContrastCheck,VisualLintBounds" />

            <TextView
                android:id="@+id/txt_transaction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5"
                android:layout_marginEnd="@dimen/_5"
                android:ellipsize="end"
                android:fontFamily="@font/sans_font_medium"
                android:gravity="center_vertical|end"
                android:maxLines="1"
                android:paddingStart="@dimen/_5"
                android:paddingTop="@dimen/_2"
                android:paddingEnd="@dimen/_5"
                android:paddingBottom="@dimen/_2"
                android:text="@string/title_demo_time"
                android:textColor="@color/color_text_secondary"
                android:textSize="@dimen/small_text_size"
                tools:ignore="UseCompatTextViewDrawableXml" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>